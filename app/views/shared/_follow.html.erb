<% if user != current_user %><%# 只有當user不是current_user時才會顯示按鈕 %>
        
  <% if current_user.following?(user) %>
    <%= link_to 'Unfollow', followship_path(user), method: :delete, class: "btn btn-default" %>
  <% else %>
    <%= link_to 'Follow', followships_path(following_id: user.id), method: :post, class: "btn btn-default" %>
  <% end %>
      
<% end %>