<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to '首頁', restaurants_path %></li>
      <li role="presentation"><%= link_to '最新動態', feeds_restaurants_path %></li>
      <li role="presentation"><%= link_to 'Top10人氣餐廳', tops_restaurants_path %></li>
      <li role="presentation" class="active"><%= link_to '美食達人', users_path %></li>
    </ul>

  </div>
