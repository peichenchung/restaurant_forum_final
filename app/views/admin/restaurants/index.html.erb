<div class="container">
  <h2>
    餐廳後台
    <%= link_to 'Create New Restaurant', new_admin_restaurant_path, 
      class: "btn btn-warning" %>
  </h2>

  <div><%# 切換後台餐廳總表/餐廳分類總表 %>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>

  <br>

  <div class="col-md-12">
    
    <table class="table table-striped table-bordered">
      <tr>
        <th>#</th>
        <th>Category</th>
        <th>Restaurant Name</th>
        <th></th>
      </tr>  
      
      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.id %></td>
        <td>[<%= restaurant.category.name %>]</td>
        <td><%= restaurant.name %></td>
        <td>
          <%= link_to 'Show', admin_restaurant_path(restaurant) %> &emsp;
          <%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %> &emsp;
          <%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data: {confirm:"Are you sure?"} %>
        </td>
      </tr>
      <% end %>
    </table>

  </div>

  <%= paginate @restaurants %><%# 分頁導覽器 %>
  <br>
  <br>
</div>